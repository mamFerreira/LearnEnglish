RewriteEngine On

RewriteRule ^$ index.php?controlador=home

RewriteRule ^home$ index.php?controlador=home
RewriteRule ^gramatica$ index.php?controlador=gramatica
RewriteRule ^vocabulario$ index.php?controlador=vocabulario
RewriteRule ^configuracion$ index.php?controlador=configuracion

RewriteRule ^vocabulario/(verbosRegulares|verbosIrregulares|verbosCompuestos|otroVocabulario)$ index.php?controlador=vocabulario&opcion=$1

RewriteRule ^configuracion/(NuevoVerboRegular|NuevoVerboIrregular|NuevoVerboCompuesto)$ index.php?controlador=configuracion&opcion=$1
RewriteRule ^configuracion/grabar/(VerboRegular)$ index.php?controlador=grabar&opcion=$1 [QSA,L]